#! /bin/bash

OPTSTRING=":u:r:k:"
while getopts ${OPTSTRING} opt; do
  case ${opt} in
    u)
      KMN_GH_USERNAME="${OPTARG}"
      ;;
    r)
      KMN_GH_REPO_NAME="${OPTARG}"
      ;;
    k)
      KMN_KEY_NAME="${OPTARG}"
      ;;
    ?)
      echo "Invalid option: -${OPTARG}."
      exit 1
      ;;
  esac
done

gh_baseurl="https://raw.githubusercontent.com/${KMN_GH_USERNAME}/${KMN_GH_REPO_NAME}/master"
gh_key_url="${gh_baseurl}/${KMN_KEY_NAME}.pub"

curl "${gh_key_url}" >> ${HOME}/.ssh/authorized_keys
